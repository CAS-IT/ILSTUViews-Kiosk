<?xml version="1.0"?> <project name="CDW Kiosk" basedir="." default="main">         <property file="build.properties" />               <taskdef name="S3Upload" classname="dak.ant.taskdefs.S3Upload" onerror="fail" />         <target name="main" depends="refresh, build, upload">        <!-- Just wraps up the whole process. -->    </target>         <target name="refresh" description="Discards any local changes and grabs the latest version of the repo.">          <exec dir="$basedir}\..\.." executable="cmd">            <arg line="/c git reset --hard HEAD"/>          </exec>          <exec dir="$basedir}\..\.." executable="cmd">            <arg line="/c git pull"/>          </exec>    </target>         <target name="build" description="Uses Flash Builder to perform a release build and wrap it in an AIR App installer.">         <!-- See: http://help.adobe.com/en_US/flashbuilder/using/WSe4e4b720da9dedb524b8220812e5611f28f-7fcc.html -->        <fb.exportReleaseBuild            project="cdw_kiosk"            destfile="TheWall.exe"            certificate="${basedir}\certificate\lpcert.p12"            destdir="bin-release"            packagetype="native"            password="${CERTIFICATE_PASSWORD}"            verbose="true" />    </target>         <target name="upload" description="Uploads AIR App installer to S3." >         <S3Upload            verbose="true"            accessId="${S3_ACCESS_ID}"            secretKey="${S3_SECRET_KEY}"            bucket="${S3_BUCKET}"            publicRead="false" >            <fileset dir="${basedir}\bin-release" includes="*" />        </S3Upload>    </target> </project>